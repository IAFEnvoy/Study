[[1,"哀","形容词","悲伤，伤心","鸟之将死，其鸣也哀。","论语·泰伯"],[null,null,null,"悲凉，凄切","其间旦暮闻何物？杜鹃啼血猿哀鸣。","琵琶行"],[null,null,"动词","哭得很悲伤","有妇人哭于墓者而哀。","礼记·檀弓"],[null,null,null,"哀叹，哀伤","秦人不暇自哀，而后人哀之。","阿房宫赋"],[null,null,null,null,"哀吾生之须史，羡长江之无穷。","赤壁赋"],[null,null,null,"吊唁，哀悼","秦不哀吾丧而伐吾同姓，秦则无礼。","秦晋毅之战"],[null,null,null,"怜悯，同情","君将哀而生之乎？","捕蛇者说"],[null,null,"名词","衰痛","我心伤悲，莫知我哀。","诗经·采薇"],[2,"爱","动词","喜爱，疼爱","父母之爱子，则为之计深远","触龙说赵太后"],[null,null,null,null,"爱其子，择师而教之。","师说"],[null,null,null,"喜好，爱好","秦爱纷奢，人亦念其家。","阿房宫赋"],[null,null,null,null,"予独爱莲之出淤泥而不染。","爱莲说"],[null,null,null,"施惠于人","吴广素爱人。","陈涉世家"],[null,null,null,"爱护","虽日爱之，其实害之。","种树郭案驼传"],[null,null,null,"爱惜，珍惜","使六国各爱其人，则足以拒秦。","阿房宫赋"],[null,null,null,"吝惜，吝啬，舍不得","不爱珍器重宝肥饶之地。","过秦论"],[null,null,null,null,"齐国虽遍小，吾何爱一牛？","齐桓晋文之事"],[null,null,null,"怜悯，同情","若爱重伤，则如勿伤。","左传"],[null,null,null,"爱戴，拥戴","（李广）宽缓不苛，士以此爱乐为用。【用：效力】","李将军列传"],[null,null,"名词","仁爱，恩惠","爱多者则法不立，威寡者则下侵上。","韩非子"],[3,"安","形容词","安定，安宁","不患寡而患不均，不患贫而患不安。","季氏将伐颛央"],[null,null,null,null,"思国之安者，必积其德义。","谏太宗十思疏"],[null,null,null,"安稳","风雨不动安如山。","茅屋为秋风所破歌"],[null,null,null,null,"然后得一夕安寝。","六国论"],[null,null,null,"舒适，安逸","君子食无求饱，居无求安。","论语·学而"],[null,null,null,null,"予出官二年，恬然自安。","琵琶行"],[null,null,"动词","使安定，使安宁","将有作，则思知止以安人。","谏太宗十思疏"],[null,null,null,null,"又何以蕃吾生而安吾性耶？【性：生活】","种树郭驼传"],[null,null,null,"安身，养生","衣食所安，弗敢专也，必以分人。","曹论战"],[null,null,null,"安抚，抚慰","若备与彼协心，上下齐同，则宜抚安。","赤壁之战"],[null,null,"代词","何处，哪里","皮之不存，毛将安傅？","左传"],[null,null,null,null,"沛公安在？","鸿门宴"],[null,null,"副词","怎么","燕雀安知鸿鹊之志哉！","陈涉世家"],[null,null,null,null,"尔安敢轻吾射！","卖油翁"],[4,"按","动词","用手压着，摁","以一平板按其面，则字平如砥。【砥：细的磨石】","活板"],[null,null,null,"用手握住","项王按剑而距。【距：长跪，即双膝着地，上身挺直】","鸿门宴"],[null,null,null,"止住，控制","于是天子乃按箸徐行。","周亚夫军细柳"],[null,null,null,null,"何不按兵束甲，北面而事之。","赤壁之战"],[null,null,null,"巡行，巡视","部使者减，新贵，将按郡至袁。","书博鸡者事"],[null,null,null,"查究，查办","既而以吴民之乱请于朝，按诛五人。","五人墓碑记"],[null,null,null,"查索，查询","修尝考其山川，按其图记。","丰乐亭记"],[null,null,"介词","按照，依照","缘法而治，按功而赏。","商君书"],[null,null,null,null,"按图索骥。","成语  "],[5,"案","名词","木制的盛食物的托盘","有心待与他举案齐眉。","长亭送别"],[null,null,null,"长方形的桌子","每移案，顾视无可置者。","项脊轩志"],[null,null,null,null,"成妻纳钱案上，焚拜如前人。","促织"],[null,null,null,"文书，案卷","无丝竹之乱耳，无案牌之劳形。","陋室铭"],[null,null,"动词","同“按”。察看，核实。","召有司案图。","廉颇蔺相如列传"],[null,null,null,"同“按”。用手摁，向下压","案灌夫项令谢。【项：头颈】","史记"],[6,"昂","动词","仰起，起","祖胸露乳，矫首昂视。【矫：抬","核舟记"],[null,null,null,"升，抬高","昂其直，居为奇货。","促织"],[null,null,null,"激励，振奋","激昂大义，蹈死不顾。","五人墓碑记"],[null,null,"形容词","高","故谷价低昂，一贵一贼矣。","论衡"],[7,"傲","形容词","骄傲，傲慢","今夫子傲，取祸之道也。","左传"],[null,null,null,null,"傲不可长，欲不可纵。","十渐不克终疏"],[null,null,"动词","轻视，傲视","傲物，则骨肉为行路。【物：人】","谏太宗十思疏"],[null,null,null,null,"凡为人傲天灾、犯大人、击无罪者.…","段太尉逸事状"],[null,null,"名词","高傲的情怀","倚南窗以寄傲，审容膝之易安。","归去来兮辞"],[8,"拔","动词","拔起来，拔","力拔山分气盖世。","垓下之围"],[null,null,null,"出来","项庄拔剑起舞。","鸿门宴"],[null,null,null,"提拔，选拔","是以先帝简拔以遗阵下。","出师表"],[null,null,null,"超出，高出","出于其类，拔乎其萃。","孟子"],[null,null,null,null,"天姥连天向天横，势拔五岳掩赤城。","梦游天姥吟留别"],[null,null,null,"攻下，攻占","惠王用张仪之计，拔三川之地。","谏逐客书"],[null,null,null,"移易，动摇","坚忍不拔。","成语"],[null,null,"形容词","挺拔","余观雁荡诸峰，皆峭拔险怪。","雁荡山"],[9,"罢","动词","罢官，免职","窦太后大怒，乃罢逐赵缩、王臧等。","史记"],[null,null,null,null,"及为吏，以污贿不饬罢。【饬：谨慎","芋老人传"],[null,null,null,"归，撤回","乐羊罢中山，文侯赏其功而疑其心。","韩非子"],[null,null,null,null,"月余，三军皆罢。乃拜亚夫为中尉。","周亚夫军细柳"],[null,null,null,"停止","欲罢不能。","论语·子罕"],[null,null,null,"结束，完毕","曲罢曾教善才服。【善才：唐代对乐师的通称，意谓能手】","琵琶行"],[null,null,null,"（市）散","及反，市罢，遂不得履。","郑人买履"],[null,null,null,"同“疲”。弱。音pi。","罢夫赢老易子而咬其骨。","论积贮疏"],[10,"白","形容词","明亮，天亮","不知东方之既白。","赤壁赋"],[null,null,null,"皎洁","东船西舫悄无言，唯见江心秋月白。","琵琶行"],[null,null,null,"白色","兼莨苍苍，白露为霜。","诗经·蒹葭"],[null,null,null,null,"永州之野产异蛇，黑质而白章。","捕蛇者说"],[null,null,null,"纯洁","粉骨碎身浑不怕，要留清白在人间。","石灰吟"],[null,null,"动词","（下对上）陈述，禀告","律知武终不可胁，白单于。","苏武传"],[null,null,null,null,"便可白公姥，及时相遣归。","孔雀东南飞"],[null,null,null,"变白，使…变白","始以强壮出，及还，须发尽白。","苏武传"],[null,null,null,null,"莫等闲，白了少年头，空悲切。","满江红"],[null,null,null,"昭雪，使…清白","然使君冤未自，犹无益也。","书博鸡者事"],[null,null,"名词","指白发","见红女白婆，填塞门户。","促织"],[null,null,null,"指杯中的酒","余强饮三大白而别。","湖心亭看雪"],[11,"败","动词","毁坏，败坏","奈何欲以乱败郭氏？","段太尉逸事状"],[null,null,null,"毁弃，背弃","于是从散约败，争割地而赂秦。","过秦论"],[null,null,null,"失败，打败仗","败义以求生，岂巨伯所行邪。","荀巨伯探友"],[null,null,null,"打败，","赵尝五战于秦，二败而三胜。","六国论"],[null,null,null,"使失败","匈奴入杀辽西太守，败韩将军。[入：入侵]","李将军列传"],[null,null,null,"使毁败","小人多欲则多求妄用，败家丧身。","训俭示康"],[null,null,"形容词","破旧，破毁","视其中，则干若败絮。","卖柑者言"],[null,null,null,null,"于败堵丛草中，探石发穴。","促织"],[null,null,null,"衰落，调残","只有霜中败叶，零落难堪，似成弃物矣。","芙蕖"],[null,null,null,"腐烂，味变质","鱼馒而肉败，不食。","论语"],[12,"拜","动词","行拜礼，表示恭敬。","子墨子起，再拜。","公输"],[null,null,null,null,"绘拜谢，起，立而饮之。","鸿门宴"],[null,null,null,"拜见，谒见","府吏还家去，上堂拜阿母。","孔雀东南飞"],[null,null,null,null,"肃遂拜蒙母，结友而别。","孙权劝学"],[null,null,null,"跪拜，磕头","成妻纳钱案上，焚拜如前人。","促织"],[null,null,null,"授给官职","诏书特下，拜臣郎中。","陈情表"],[null,null,null,null,"乃拜亚夫为中尉。","周亚夫军细柳"],[null,null,null,"接受官职，就任","于是辞相印不拜。","《指南录》后序"],[null,null,null,"呈上，奉上","臣不胜犬马怖惧之情，谨拜表以闻。","陈情表"],[null,null,null,"拜谢，报答","若从君惠而免之，三年，将拜君赐。","秦晋崤之战"],[13,"报","动词","判决罪人","报而罪之。【句意为：判决并治他的罪】","韩非子"],[null,null,null,"报告，上报","具以沛公言报项王。","鸿门宴"],[null,null,null,null,"遂为猬背报充里正役。","促织"],[null,null,null,"回复，答复","求人可使报秦者，未得。","廉颇蔺相如列传"],[null,null,null,"回报，报答","非臣陨首所能上报。","陈情表"],[null,null,null,null,"盖追先帝之殊遇，欲报之于陛下也。","出师表"],[null,null,null,"回赠","投我以桃，报之以李。","诗经·木瓜"],[null,null,null,"报复","士不敢弯弓而报怨。","过秦论"],[null,null,null,"同“赴”。前往。音fu。","卿但暂还家，吾今且报府。","孔雀东南飞"],[14,"暴","动词","同“曝”，晒。音pu","虽有稿暴，不复挺者，揉使之然也。","劝学"],[null,null,null,null,"一日暴之，十日寒之。","孟子 "],[null,null,null,"暴露，冒着","暴霜露，斩荆棘。","六国论"],[null,null,null,"显露，显扬","其所摧败，功亦足以暴于天下矣。","报任安书"],[null,null,null,"侵害，欺凌","以强凌弱，以众暴寡。","庄子"],[null,null,null,null,"今不忍人无寇暴死。","段太尉逸事状"],[null,null,"形容词","暴虐，残暴","伐无道，诛暴秦。","陈涉世家"],[null,null,null,"凶恶，凶狠","言既遂矣，至于暴矣。","诗经·氓"],[null,null,null,"暴躁，急躁","我有亲父兄，性行暴如雷。","孔雀东南飞"],[null,null,"副词","猛，急骤","摊水暴益，荆人弗知。","察今"],[null,null,null,"突然","屠暴起，以刀劈狼首。","狼"],[null,null,null,null,"屡擦之，虫暴怒，直奔。","促织"],[15,"悲","动词","哀伤，伤心","少壮不努力，老大徒伤悲。","长歌行"],[null,null,null,null,"不以物喜，不以已悲。","岳阳楼记"],[null,null,null,"哀怜，怜阀","余悲之，且日：“若毒之乎？”","捕蛇者说"],[null,null,null,"感叹，叹惜","余于仆碑，又以悲夫古书之不存。","游褒禅山记"],[null,null,null,"哀叹","君不见高堂明镜悲白发，朝如青丝暮成雪。","将进酒"],[null,null,"形容词","悲哀，悲伤","十七为君妇，心中常苦悲。","孔雀东南飞"],[null,null,null,"悲凉，凄凉","知不可乎骤得，托遗响于悲风。","赤壁赋"],[null,null,"名词","悲伤，悲痛","人有悲欢离合，月有阴晴圆缺。","水调歌头"],[null,null,null,null,"因而化怒为悲，抢呼欲绝。","促织"],[16,"北","名词","背离，违背。音bei","士无反北之心。【反：反叛】","战国策"],[null,null,null,"往回跑，败逃","鲁人从君战，三战三北。","五鑫"],[null,null,null,null,"匈奴小入，详北不胜。【详：假装】","史记"],[null,null,"动词","败逃的军队","追亡逐北，伏户百万。","过秦论"],[null,null,null,"北方，北边","本在冀州之南，河阳之北。","愚公移山"],[null,null,null,"作状语，向北","然则北通巫峡，南极潇湘。","岳阳楼记"],[17,"倍","动词","同“背”，违背；背叛","愿伯具言臣之不敢倍德也。","鸿门宴"],[null,null,null,"同“背”，背向，背着","天子吊，主人必将倍殡极。","战国策"],[null,null,null,"加倍","乘上之急，所卖必倍。","论贵粟疏"],[null,null,"量词","原数的一倍","尝以十倍之地，百万之师，叩关而攻秦。","过秦论"],[null,null,"副词","更加","独在异乡为异客，每逢佳节倍思亲。","九月九日忆山东兄弟"],[18,"备","动词","防备，戒备","备他盗之出入与非常也","鸿门宴"],[null,null,null,null,"郑有备矣，不可冀也。","秦晋毅之战"],[null,null,null,"具备，齐备","积善成德，而神明自得，圣心备焉。","劝学 "],[null,null,null,null,"青林翠竹，四时俱备。","答谢中书书"],[null,null,null,"预备，准备","急应河阳役，犹得备晨炊。","石壕吏"],[null,null,null,null,"有奇字素无备者，旋刻之。","活板"],[null,null,null,"配备，佩带","左佩刀，右备容臭。【容臭：香袋】","送东阳马生序"],[null,null,"形容词","完备，详尽","吾所以待侯生者备矣。","史记"],[null,null,null,null,"前人之述备矣。","岳阳楼记"],[null,null,"副词","很，非常","蟹白栗黄，备极护爱。【备、极同义】","促织"],[19,"被","动词","覆盖","幸大雪逾岭，被南越中数州。","答韦中立论师道书"],[null,null,null,null,"成归，闻妻言，如被冰雪。","促织"],[null,null,null,"蒙受，遭受","项王身亦被十余创。","垓下之围"],[null,null,null,null,"妆成每被秋娘妒。","琵琶行"],[null,null,null,"同“披”，披着，穿上。音pi","将军身被坚执锐。","国殇"],[null,null,null,"同“披”，散开。音pi","原至于江滨，被发行吟江。","屈原列传"],[null,null,null,"同“披”，佩戴。音pi","被明月宝璐。【明月：指明珠】","涉江"],[null,null,"介词","表示被动","信而见疑，忠而被。","屈原列传"],[20,"背","名词","脊背","覆武其上，蹈其背以出血。","苏武传"],[null,null,null,"做状语，用背部","令二人尊露而背倚之。","左忠毅公逸事"],[null,null,null,"背面，反面","其船背稍夷，则题名其上。","核舟记"],[null,null,"动词","背对着","以缚背刃，力上下，得绝。","童区寄传"],[null,null,null,"违背，背叛","请往谓项伯，言沛公不敢背项王也。","鸿门宴"],[null,null,null,null,"畔主背亲，为降虏于蛮夷。","苏武传"],[null,null,null,"离开，抛弃","生孩六月，慈父见背。【见背：犹言去世】","陈情表"],[21,"奔","动词","快跑","屠乃奔倚其下，弛担持刀。","狼"],[null,null,null,null,"乃瞻衡宇，载欣载奔。","归去来兮辞"],[null,null,null,"出逃，逃亡","杞子奔齐，逢孙、杨孙奔宋。","秦晋毅之战"],[null,null,null,"直向，直往","一贼提刀突奔客。","大铁椎传"],[null,null,null,"特指女子私自投奔所爱的人","（卓）文君夜亡奔相如。","史记"],[null,null,"名词","指快马。动词活用","虽乘奔御风，不以疾也。","三峡"],[null,null,null,null,"急瑞甚箭，猛浪若奔。","与朱元思书"],[22,"本","名词","树根","臣闻求木之长者，必固其根本。","谏太宗十思书"],[null,null,null,"树干","摇其本，以观其疏密。","种树郭驼传"],[null,null,null,"本源，根源","父母者，人之本也。","屈原列传"],[null,null,null,"特指农桑业","今背本而趋末，食者甚众，是天下之大残也。【末：指工商业】","论积贮疏"],[null,null,null,"根本，基础","然墨之道，兼爱为本。【墨：墨家学派】","中山狼传"],[null,null,"形容词","本来的，原来的","此之谓失其本心。【本心：天性，天良】","鱼我所欲也"],[null,null,"副词","本来，原来","本图宦达。不矜名节。","陈情表"],[null,null,"动词","推求本源，推究","臣本布衣，射耕于南阳。","出师表"],[null,null,null,null,"抑本其成败之迹，而皆自于人欤？【抑：或许。迹：事迹】","五代史伶官传序"],[23,"逼","动词","迫近，靠近","鸡健进，逐逼之。","促织"],[null,null,null,null,"如影历历，逼取便逝。","祭妹文"],[null,null,null,"迫于，逼迫","荆州之民附操者，逼兵势耳。","赤壁之战"],[null,null,null,null,"自誓不嫁，其家逼之。","孔雀东南飞"],[null,null,null,"催逼","非夫人之物而强假爲，必虑人逼取。","黄生借书说"],[null,null,"形容词","狭窄","城隍逼狭，卑陋之所耳。","水经注"],[null,null,"副词","极其，非常","细瞻景状，与村东大佛阁逼似。","促织"],[24,"比",null,"紧靠，并列","其两膝相比者，各隐卷底衣褶中。","核舟记"],[null,null,null,"比较，相比","今虽死乎此，比吾乡邻之死则已后矣。","捕蛇者说"],[null,null,null,"较量","与陈涉度长絮大，比权量力。","过秦论"],[null,null,null,"比拟，比作","每自比于管仲、乐毅，时人莫之许也。","隆中对"],[null,null,null,"比照，与……同等看待","为之驾，比门下之车客。","冯谖客孟尝君"],[null,null,null,"勾结","君子周而不比，小人比而不周。","论语"],[null,null,null,"等到","比及三年，可使有勇，且知方也。","论语·先进"],[null,null,null,null,"比去，以手阖门。","项脊轩志"],[null,null,"形容词","同样","与天地兮比寿，与日月兮齐光。","涉江"],[null,null,null,"近，亲密","海内存知己，天涯若比邻。","送杜少府之任蜀川"],[null,null,"副词","近来","比得软脚病，往往而剧。","祭十二郎文"],[null,null,null,"连续，接连","人有卖骏马者，比三旦立于市。","战国策"],[25,"鄙","名词","边邑，边远的地方","蜀之鄙有二僧，其一贫，其一富。","为学"],[null,null,"动词","把…当作边邑","越国以鄙远，君知其难也。【鄙远：把远地作为自已的边邑】","烛之武退秦师"],[null,null,null,"看不起，轻视","孔子鄙其小器。","训俭示康"],[null,null,"形容词","浅陋，目光短浅","肉食者鄙，未能远谋。","曹刻论战"],[null,null,null,"卑微，轻贱","人贱物亦鄙，不足迎后人。","孔雀东南飞"],[26,"毕","动词","完毕，结束","录毕，走送之，不敢稍逾约。","送东阳马生序"],[null,null,null,null,"语未毕，余泣，亦泣。","项脊轩志"],[null,null,null,"使完毕","卒廷见相如，毕礼而归之。","廉颇蔺相如列传"],[null,null,null,"使尽，用尽","吾与汝毕力平险。","愚公移山"],[null,null,null,"灭绝","六王毕，四海一。","阿房宫赋"],[null,null,"副词","全部，完全","群贤毕至，少长咸集。","兰亭集序"],[null,null,null,null,"明道德之广崇，治乱之条贯，靡不毕见。","屈原列传"],[27,"蔽","动词","遮蔽，遮盖","舳舻千里，旌旗蔽空。","赤壁赋"],[null,null,null,"遮挡，掩护","项王亦拔剑起舞，常以身翼蔽沛公。","鸿门宴"],[null,null,null,"隐蔽，隐藏","以为神，蔽林间窥之。","黔之驴"],[null,null,null,"（受）蒙蔽","由此观之，王之蔽甚矣。","邹忌讽齐王纳谏"],[null,null,null,null,"虑雍蔽，则思虚心以纳下。","谏太宗十思疏"],[null,null,null,"概括","诗三百，一言以蔽之。","论语"],[null,null,"形容词","昏聩，蒙味","汝愚之甚，蔽之甚，身且死，何以货为？","永之氓"],[28,"辟","名词","君主","惟辟作福，惟辟作威。","尚书"],[null,null,null,"同“僻”。不正行为","苟无恒心，放辟邪侈，无不为已。【放：放纵】","齐桓晋文之事"],[null,null,"动词","征召","连辟公府不就。【就：就任】","张衡传"],[null,null,null,"同“避”，躲避","其北陵，文王之所辟风雨也。","秦晋發之战"],[null,null,null,"开，开启。音pi","前辟四窗。","项脊轩志"],[null,null,null,null,"唇吻翁辟，不知何词。","促织"],[null,null,null,"开辟，开拓。音pi","欲辟土地，朝秦楚。","齐桓晋文之事"],[null,null,null,"驳斥。音pi","辟邪说，难王人。","答司马谏议书"],[null,null,"形容词","同“僻”。偏僻","辟不当道者，皆不及往。","登泰山记"],[29,"便","形容词","灵便，轻捷。音pian","清声而便体，秀外而惠中。【便体：体态轻盈】","送李愿归盘古序"],[null,null,null,"利，流利。音pian","年始十八九，便言多令才。","孔雀东南飞"],[null,null,"动词","方便，便于","故请母命而宁汝于斯，便祭扫也。","祭妹文"],[null,null,null,"合宜，有利","将在外，主令有所不受，以便国家。","信陵君窃符救赵"],[null,null,"名词","有利时机","因利乘便，宰割天下，分裂山河。","过秦论"],[null,null,null,"吉利的日子","视历复开书，便利此月内。","孔雀东南飞"],[null,null,"副词","就，即","便舍船，从口入。","桃花源记"],[null,null,null,null,"槌床便大怒。","孔雀东南飞"],[null,null,"连词","即使，纵然","便纵有千种风情，更与何人说?","雨霖铃"],[30,"表","名词","外，外面","江表英豪咸归附之。【江表：即长江以南】","赤壁之战"],[null,null,null,"外围，屏障","號，虞之表也。","左传"],[null,null,null,"标志，标记","荆人尚犹循表而导之。","察今"],[null,null,null,"表率，榜样","廉者，民之表也。","包拯传"],[null,null,null,"指给皇帝的奏章","臣具以表闻，辞不就职。","陈情表"],[null,null,null,null,"今当远离，临表涕零。","出师表"],[null,null,"动词","作标记","荆人欲袭宋，使人先表滩水。","察今"],[null,null,null,"上表奏事","李翘谋袭蔡州，表请益兵。","李想雪夜入蔡州"],[null,null,null,"表明","无人信高洁，谁为表予心。","咏蝉"],[31,"兵","名词","兵器","收天下之兵，聚之咸阳。","过秦论"],[null,null,null,null,"此所谓“籍寇兵而盗粮”者也。【籍：借。贵：送】","速逐客书"],[null,null,null,"士兵，军队","项羽兵四十万，在新丰鸿门。","鸿门宴"],[null,null,null,null,"扶苏以数速故，上使外将兵。","陈涉世家"],[null,null,null,null,"起视四境，而秦兵又至矣。","六国论"],[null,null,null,"战争","兵旱相乘，天下大屈。","论积贮疏"],[null,null,null,null,"又兵象也，于行为金。","秋声赋"],[null,null,null,"战略，策略","故上兵伐谋，其次伐交。","孙子"],[32,"并 ","动词","合，合并","并力西向，则吾恐秦人食之不得下咽也。","六国论"],[null,null,null,"兼并，吞并","囊括四海之意，并吞八荒之心。","过秦论"],[null,null,null,null,"并国二十，遂霸西戎。","谏逐客书"],[null,null,"副词","一齐，一同","陈胜佐之，并杀两尉。","陈涉世家"],[null,null,null,null,"文武并用，垂拱而治。","谏太宗十思疏"],[null,null,null,"平行，并列","而两狼之并驱如故。","狼 "],[null,null,null,"皆，都","黄发垂着，并怡然自乐。","桃花源"],[null,null,null,null,"少以父任，兄弟并为郎。","苏武传"],[null,null,"连词","并且","即书诗四句，并自为其名。","伤仲永"],[null,null,null,"相当于“连”","两股间脓血流离，并虫亦不能行捉矣。","促织"],[null,null,null,"和，以及","对联、题名并篆文，为字共三十有四。","核舟记"],[33,"病","名词","重病","行年四十而有内热之病以死。","庄子"],[null,null,null,"毛病，缺点","人皆吾固陋，吾不以为病。","训俭示康"],[null,null,null,null,"是已而非人，俗之同病。","问说"],[null,null,"动词","指责，责备","今人乃以俭相诉病。","训俭示康"],[null,null,null,"生病","未果，寻病终，后遂无问津者。","桃花源记"],[null,null,null,"担心，优虑","君子病无能為，不病人之不己知也。","论语"],[null,null,null,"辱，羞辱","圣人非所与熙也，寡人反取病爲。【熙：嬉戏】","晏子使楚"],[null,null,"形容词","病态的","沉舟侧畔千帆过，病树前头万木春。","酬乐天扬州初逢席上见赠"],[null,null,null,"劳累，疲惫","今日病矣，予助苗长矣。","揠苗助长"],[null,null,null,"受困，困苦","向吾不为斯役，则久已病矣。","捕蛇者说"],[34,"博","形容词","宽大","岂必褒衣博带。","淮南子"],[null,null,null,"广博，广泛","君子博学而日参省乎己。","劝学"],[null,null,null,"博学，渊博","仲尼语之以为博。","秋水"],[null,null,"动词","换取，讨取","顾念蓄劣物终无所用，不如拼博一笑。","促织"],[null,null,null,"赌博","日抱鸡呼少年博市中。","书博鸡者事"],[null,null,"名词","古代一种棋类游戏","博奔好饮酒，不顾父母之养。【博弈：下棋】","孟子"],[35,"薄","形容词","微薄，微少","门衰祚薄，晚有儿息。","陈情表"],[null,null,null,null,"不终岁，薄产累尽。","促织"],[null,null,null,"淡薄","慎勿为妇死，贵哦情何薄！","孔雀东南飞"],[null,null,null,"与“厚”相对","狐裘不暖锦薄。","白雪歌送武判官归京"],[null,null,"动词","靠近，迫近","日薄西山，气息。","陈情表"],[null,null,null,null,"薄暮冥冥，虎啸猿蹄。","岳阳楼记"],[null,null,null,"减少","邻之厚，君之薄也。【厚：增多】","烛之武退秦师"],[null,null,null,"减轻","薄赋敛，广畜积，以实仓。","论贵粟疏"],[null,null,null,"薄，轻视","不宜妄自菲薄。","出师表"],[null,null,"名词","草木丛生的地方","露申辛夷，死林薄兮。","涉江"],[36,"步","名词","左右脚各迈一次为步","不积步，无以至千里。","劝学"],[null,null,null,"步伐，脚步","纤纤作细步，精妙世无双。","孔雀东南飞"],[null,null,null,"步兵","诸人徒见操书言水步八十万而各恐慢。","赤壁之战"],[null,null,"动词","行走","老臣今者殊不欲食，乃自强步。","触龙说赵太后"],[null,null,null,"散步","携手赋诗，步径，临清流也。","山中与裴秀才迪书"],[null,null,"副词","徒步","四人持剑盾步走。","鸿门宴"],[37,"苍","名词","深蓝色或深绿色","天苍苍，野茫茫，风吹草低见牛羊。","敕勒歌"],[null,null,null,null,"石苍黑色，多平方，少圜。","登泰山记"],[null,null,null,"灰白色","少壮能几时，蔓发各已苍。","赠卫八处士"],[null,null,null,null,"两鬂苍苍十指黑。","卖炭翁"],[null,null,null,"代指蓝天","天戴其苍，地履其黄。","少年中国说"],[null,null,null,"代指苍鹰","左牵黄，右擎苍。","江城子·密州出猎"],[null,null,"形容词","苍老的","苍颜白发，颓乎其中者，太守醉也。","醉翁亭记"],[null,null,"苍苍","繁茂的样子","兼苍苍，白露为霜。","诗经·蒹葭"],[null,null,null,null,"山川相缪，郁乎苍苍。","赤壁赋"],[null,null,"苍生","百姓","可怜夜半虚前席，不问苍生问鬼神。","贾生"],[38,"操","动词","拿着，握着","操吴戈兮被犀甲。","国殇"],[null,null,null,"携带","至之市而忘操之。","郑人买履"],[null,null,null,null,"大王来何操？","鸿门宴"],[null,null,null,"操纵，掌握","操蛇之神闻之。","愚公移山"],[null,null,null,"从事","邑有成名者，操童子业。","促织"],[null,null,null,"采取","所操之术多异故也。","答司马谏议书 "],[null,null,null,"弹奏，抚弄","操千曲而后晓声，观千剑而后识器。","文心雕龙"],[null,null,"名词","操守，品德","虽贾人，有贤操。","汉书"],[null,null,null,"琴曲名","初为霖雨之操，更造崩山之音。","列子"],[39,"草","名词","草本植物名","水陆草木之花，可爱者甚蕃。","爱莲说"],[null,null,null,"青草","树木丛生，百草丰茂。","观沧海"],[null,null,null,null,"苔痕上阶绿，草色入帘青。","陋室铭"],[null,null,null,"荒野，野外","空以身膏草野，谁复知之？","苏武传"],[null,null,"形容词","粗糙的，简陋的","左右以君贱之也，食以草具。","冯谖客孟尝君"],[null,null,null,null,"三顾臣于草庐之中。","出师表"],[null,null,null,"初步的","屈原属草稿未定。【属：写】","屈原列传"],[40,"策","名词","古代的鞭子","奋六世之余烈，振长策而御宇内。","过秦论"],[null,null,null,null,"执策而临之。","马说"],[null,null,null,"计策，计谋","蒙故业，因遗策。","过秦论"],[null,null,null,"挂杖","夸父弃其策，是为邓林。【邓林：桃林】","淮南子"],[null,null,null,"成编竹简，后泛指书籍","执策映长明灯读。","王冕读书"],[null,null,"动词","鞭打，驾驭","策之不以其道。","马说"],[null,null,null,"挂着","策扶老以流憩。【扶老：手杖。流：周游】","归去来兮辞"],[null,null,null,"记录，记载","策勋十二转，赏赐百千强。","木兰诗"],[41," 曾","副词","曾经","江南好，风景旧曾谙。","忆江南"],[null,null,null,"竟，竟然，连…都","曾不若妻弱子。","愚公移山"],[null,null,null,"尚，还","以君之力，曾不能损魁父之丘。【魁父：小丘】","愚公移山"],[null,null,null,"从来","既醉而退，曾不各情去留。【吝情：挂心在意】","五柳先生传"],[null,null,"形容词","同“层”，重叠的","荡胸生曾云，决眦入归鸟。","望岳"],[null,null,null,"同“增”，增加","所以动心忍性，曾益其所不能。","孟子"],[42,"察","动词","观察，仔细看","微察公子，公子颜色愈和。","信陵君窃符救赵"],[null,null,null,null,"徐而察之，则山下皆石穴链。","石钟山记"],[null,null,null,"明察，了解","小大之狱，虽不能察，必以情。","曹刻论战"],[null,null,null,null,"又恐汝不察吾衷。"